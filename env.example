# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SCOPES=write_products,read_orders,write_metaobjects,read_metaobjects,write_customers,read_customers
HOST=https://your-domain.com

# Database Configuration
DATABASE_URL=file:dev.sqlite

# Rails Backend Configuration (for backend service)
RAILS_BACKEND_URL=https://your-rails-backend.com

# Backblaze B2 Configuration (for backend)
B2_ACCOUNT_ID=your_b2_account_id
B2_ACCOUNT_TOKEN=your_b2_account_token
B2_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=your_b2_bucket_name

# Redis Configuration (for backend)
REDIS_URL=redis://localhost:6379

# Email Service Configuration (for backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# FFmpeg Configuration (for backend)
FFMPEG_PATH=/usr/bin/ffmpeg

# Security
SESSION_SECRET=your_session_secret_key

